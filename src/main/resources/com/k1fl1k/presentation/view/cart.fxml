<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.k1fl1k.presentation.controller.CartController">
  <!-- Список елементів у корзині -->
  <VBox layoutX="4.0" layoutY="65.0" prefHeight="285.0" prefWidth="586.0" spacing="10"
    AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="10"
    AnchorPane.rightAnchor="10" AnchorPane.topAnchor="65.0"
    fx:id="cartVBox">
    <Label fx:id="productInfoLabel"/>
  </VBox>

  <!-- Кнопки для управління корзиною -->
  <HBox alignment="CENTER_RIGHT" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
    <Button text="Очистити корзину" onAction="#clearCart" />
    <Button text="Оформити замовлення" onAction="#checkout"/>
  </HBox>
</AnchorPane>
